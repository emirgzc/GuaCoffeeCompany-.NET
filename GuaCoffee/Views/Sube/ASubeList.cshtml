
@model IEnumerable<EntityLayer.Concrete.Sube>

@{
	ViewBag.Title = "ASubeList";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-content">
	<section class="row">

		<div class="col-12 col-lg-9">
			<a class="btn btn-secondary mb-2" href="/Sube/ASubeAdd/">Ekle</a>
			<div class="row">
				@foreach (var item in Model)
				{

					<div class="col-12 col-lg-4 col-md-6">
						<div class="card">
							<div class="card-body px-3 py-4-5">
								<div class="row">
									<div class="col-md-6">
										<a class="btn btn-success mb-2" href="/Sube/ASubeDelete/@item.SubeID">Sil</a>
										<a class="btn btn-danger mb-2" href="/Sube/ASubeUpdate/@item.SubeID">Güncelle</a>
										@if (item.Status == true)
										{
											<a class="btn btn-danger mb-2" href="/Sube/ASubeDoFalse/@item.SubeID">Pasif Yap</a>
										}
										else
										{
											<a class="btn btn-success mb-2" href="/Sube/ASubeDoTrue/@item.SubeID">Aktif Yap</a>
										}
									</div>
									<div class="col-md-6">
										<h6 class="text-muted font-semibold">@item.Title</h6>
									</div>
								</div>
							</div>
						</div>

					</div>
				}
			</div>

		</div>

	</section>
</div>

