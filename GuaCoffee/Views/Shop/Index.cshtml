
@model IEnumerable<EntityLayer.Concrete.Store>
@using GuaCoffee.App_Code

@{
	ViewBag.Title = "Index";
	Layout = "~/Views/Shared/_AnaLayout.cshtml";
}

<section class="page-header">
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<div class="content">
					<h1 class="page-name">MAĞAZA</h1>
					<ol class="breadcrumb">
						<li><a href="/Slider/Index/">Anasayfa</a></li>
						<li class="active">Mağaza</li>
					</ol>
				</div>
			</div>
		</div>
	</div>
</section>

<section class="products section">
	<div class="container">
		<div class="row">

			@foreach (var item in Model)
			{
				<div class="col-md-3">
					<div class="product-item">
						<div class="product-thumb">
							<span class="bage">Satılık</span>
							<img class="img-responsive" src="@item.Image" alt="Gua Coffee Company" style="width:100%; height:300px; object-fit:cover;" />
							<div class="preview-meta">
								<ul>
									<li>
										<a href="/Shop/StoreDetails/@item.StoreID/@Seo.AdresDuzenle(item.Title)">
											<i class="tf-ion-ios-search-strong"></i>
										</a>
									</li>
									<li>
										<a href="#!"><i class="tf-ion-ios-heart"></i></a>
									</li>
									<li>
										<a href="#!"><i class="tf-ion-android-cart"></i></a>
									</li>
								</ul>
							</div>
						</div>
						<div class="product-content">
							<h4><a href="/Shop/StoreDetails/@item.StoreID/@Seo.AdresDuzenle(item.Title)">@item.Title</a></h4>
							<p class="price">@item.Money TL</p>
						</div>
					</div>
				</div>
			}

		</div>
	</div>
</section>
