
@model IEnumerable<EntityLayer.Concrete.Slider>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AnaLayout.cshtml";
}

<div class="hero-slider">
	@foreach (var item in Model)
	{
		<div class="slider-item th-fullpage hero-area" style="background-image: url(@item.Image); background-position:center center">
			<div class="container">
				<div class="row">
					<div class="col-lg-8 text-center">
						<p data-duration-in=".4" data-animation-in="fadeInUp" data-delay-in=".1" style="font-size:">@item.Title</p>
						<h1 data-duration-in=".3" data-animation-in="fadeInUp" data-delay-in=".5">@item.Description.</h1>
						<a data-duration-in=".4" data-animation-in="fadeInUp" data-delay-in=".8" class="btn" href="/Franchise/Index/">Franchise Başvuru</a>
					</div>
				</div>
			</div>
		</div>
	}
</div>

