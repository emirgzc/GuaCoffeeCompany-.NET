
@{
	ViewBag.Title = "Index";
	Layout = "~/Views/Shared/_AnaLayout.cshtml";
}

<section class="page-header">
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<div class="content">
					<h1 class="page-name">FRANCHİSE</h1>
					<ol class="breadcrumb">
						<li><a href="/Slider/Index/">Anasayfa</a></li>
						<li class="active">Franchise</li>
					</ol>
				</div>
			</div>
		</div>
	</div>
</section>

<div class="page-wrapper">
	<div class="checkout shopping">
		<div class="container">
			<div class="row">
				<div class="col-md-12">
					<div class="block billing-details">
						<h4 class="widget-title">Franchise Başvuru Formu</h4>
						@using (Html.BeginForm("Index", "Franchise", FormMethod.Post))
						{
							<div class="checkout-country-code clearfix">
								<div class="form-group">
									<label for="full_name">İsim Soyisim*</label>
									<input type="text" class="form-control" name="Name" id="full_name" placeholder="" minlength="2" required="" maxlength="100">
								</div>
								<div class="form-group">
									<label for="full_name">Telefon*</label>
									<input type="text" class="form-control" name="Phone" id="full_name" placeholder="" minlength="2" required="" maxlength="20">
								</div>
							</div>
							<div class="checkout-country-code clearfix">
								<div class="form-group">
									<label for="full_name">Şirket İsmi(Varsa ismi, yoksa yok yazınız.)*</label>
									<input type="text" class="form-control" name="CompanyName" id="user_post_code" value="" minlength="2" required="" maxlength="100">
								</div>
								<div class="form-group">
									<label for="user_city">Mail Adresi*</label>
									<input type="email" class="form-control" id="user_city" name="Email" value="" minlength="2" required="" maxlength="30">
								</div>
							</div>
							<div class="checkout-country-code clearfix">
								<div class="form-group">
									<label for="user_post_code">Not*</label>
									<input type="text" class="form-control" id="user_post_code" name="Note" value="" minlength="2" required="" maxlength="100">
								</div>
								<div class="form-group">
									<label for="user_city">Mesaj*</label>
									<input type="text" class="form-control" id="user_city" name="Message" value="" minlength="2" required="" maxlength="500">
								</div>
							</div>
							<div id="cf-submit">
								<input type="submit" id="contact-submit"
									   class="btn btn-main" value="Gönder">
							</div>
						}
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

