
@model IEnumerable<EntityLayer.Concrete.About>

@{
	ViewBag.Title = "Index";
	Layout = "~/Views/Shared/_AnaLayout.cshtml";
}

<section class="page-header">
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<div class="content">
					<h1 class="page-name">HAKKIMIZDA</h1>
					<ol class="breadcrumb">
						<li><a href="/Slider/Index/">Anasayfa</a></li>
						<li class="active">Hakkımızda</li>
					</ol>
				</div>
			</div>
		</div>
	</div>
</section>

<section class="about section">
	<div class="container">
		<div class="row">
			@foreach (var item in Model)
			{

				<div class="col-md-12">
					<h2 class="mt-40 cenal cen1">@item.Title</h2>
					<p class="cenal cen2">@Html.Raw(item.GuaAbout)</p>
				</div>
			}
		</div>
	</div>
</section>

