
@model EntityLayer.Concrete.Blog

@{
	ViewBag.Title = "ANewBlog";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("ANewBlog", "Blog", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
	<span class="text-danger">(Lütfen 3Mb' dan Yüksek Resim Yükleme Yapmayınız!)</span>
	<div class="form-group">
		@Html.Label("Başlık")
		@Html.TextBoxFor(x => x.Title, new { @class = "form-control", @required = "@required" })
		@Html.ValidationMessageFor(x => x.Title, "", new { @class = "text-danger" })
		<br />
		<div class="form-group">
			<label>İçerik</label>
			<textarea class="form-control" id="editorid" required="" name="Description" rows="4"></textarea>
		</div>
		<br />
		@Html.Label("Admin(Yazar)")
		@Html.TextBoxFor(x => x.ByAdmin, new { @class = "form-control", @required = "@required" })
		@Html.ValidationMessageFor(x => x.ByAdmin, "", new { @class = "text-danger" })
		<br />
		@Html.Label("Resim")
		<input type="file" name="Image" class="form-control" required="">
		<br />
		<button class="btn btn-primary">Ekle</button>
	</div>
}

@section Scripts{
	<script src="~/mazer/dist/assets/vendors/ckeditor/ckeditor.js"></script>
	<script>
		CKEDITOR.replace("editorid")
	</script>
}

