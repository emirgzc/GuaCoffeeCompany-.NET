
@model IEnumerable<EntityLayer.Concrete.Blog>

@{
	ViewBag.Title = "ABlogList";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<a href="/Blog/ANewBlog/" class="btn btn-primary mb-3">Yeni Ekle</a>

<div class="row">
	@foreach (var item in Model)
	{
		<div class="col-lg-3 col-sm-6">
			<div class="card">
				<div class="card-body">
					<div class="text-center">
						<img src="@item.Image" alt="" class="img-fluid mb-2" style="width: 100%; height: 230px; object-fit: cover;">
						<h5 class="mt-3 mb-1">@item.Title</h5>
						<p class="m-0 p-1">@item.BlogDate.ToString("d MMMMM yyy")</p>
						@if (item.Status == true)
						{
							<p class="m-0 p-1 text-success">Yayında</p>
						}
						else
						{
							<p class="m-0 p-1 text-danger">Yayında Değil</p>
						}
						<br />
					</div>
					<div class="text-center mb-2">
						<a href="/Blog/ADeleteBlog/@item.BlogID" class="btn btn-success m-1">Sil</a>
						<a href="/Blog/ABlogUpdate/@item.BlogID" class="btn btn-warning m-1">Güncelle</a>
						@if (item.Status == true)
						{
							<a href="/Blog/ABlogDoFalse/@item.BlogID" class="btn btn-danger m-1">Pasif Yap</a>
						}
						else
						{
							<a href="/Blog/ABlogDoTrue/@item.BlogID" class="btn btn-success m-1">Aktif Yap</a>
						}
					</div>
				</div>
			</div>
		</div>
	}
</div>

