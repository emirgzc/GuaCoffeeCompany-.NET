
@model IEnumerable<EntityLayer.Concrete.Blog>

@{
	ViewBag.Title = "BlogDetails";
	Layout = "~/Views/Shared/_AnaLayout.cshtml";
}

<section class="page-header">
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<div class="content">
					@foreach (var item in Model)
					{
						<h1 class="page-name">@item.Title</h1>
						<ol class="breadcrumb">
							<li><a href="/Slider/Index/">Anasayfa</a></li>
							<li class="active">Gua Blog</li>
						</ol>
					}
				</div>
			</div>
		</div>
	</div>
</section>

<div class="page-wrapper">
	<div class="container">
		<div class="row">			
			<div class="col-md-12">
				@foreach (var item in Model)
				{
					<div class="post">
						<div class="post-media post-thumb">
							<a>
								<img src="@item.Image" alt="Gua Coffee Company" style="object-fit:cover;">
							</a>
						</div>
						<h2 class="post-title"><a href="blog-single.html">@item.Title</a></h2>
						<div class="post-meta">
							<ul>
								<li>
									<i class="tf-ion-ios-calendar"></i> @item.BlogDate.ToString("dd MMMM yyyy")
								</li>
								<li>
									<i class="tf-ion-android-person"></i> @item.ByAdmin
								</li>
							</ul>
						</div>
						<div class="post-content">
							<p>@Html.Raw(item.Description)</p>
						</div>

					</div>
				}
			</div>
		</div>
	</div>
</div>

