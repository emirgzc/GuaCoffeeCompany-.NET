
@model IEnumerable<EntityLayer.Concrete.Menu>

@{
	ViewBag.Title = "AMenuList";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-content">
	<section class="row">

		<div class="col-12 col-lg-9">
			<a class="btn btn-secondary mb-2" href="/Menu/AMenuAdd/">Ekle</a>
			<div class="row">
				@foreach (var item in Model)
				{

					<div class="col-12 col-lg-4 col-md-6">
						<div class="card">
							<div class="card-body px-3 py-4-5">
								<div class="row">
									<div class="col-md-6">
										<a class="btn btn-success mb-2" href="/Menu/AMenuDelete/@item.MenuID">Sil</a>
										<a class="btn btn-danger mb-2" href="/Menu/AMenuUpdate/@item.MenuID">Güncelle</a>
										@if (item.Status == true)
										{
											<a class="btn btn-danger mb-2" href="/Menu/AMenuDoFalse/@item.MenuID">Pasif Yap</a>
										}
										else
										{
											<a class="btn btn-success mb-2" href="/Menu/AMenuDoTrue/@item.MenuID">Aktif Yap</a>
										}
									</div>
									<div class="col-md-6">
										<h6 class="text-muted font-semibold">@item.Title</h6>
										<h6 class="font-extrabold mb-0">@item.Description</h6>
									</div>
								</div>
							</div>
						</div>

					</div>
				}
			</div>

		</div>

	</section>
</div>

