
@model EntityLayer.Concrete.Menu

@{
    ViewBag.Title = "AMenuUpdate";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title">Menü Güncelleme</h4>
			<div class="basic-form">
				@using (Html.BeginForm("AMenuUpdate", "Menu", FormMethod.Post))
				{
					@Html.HiddenFor(x => x.MenuID)
					<div class="form-group">
						@Html.Label("Menü Başlık")
						@Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
						@Html.ValidationMessageFor(x => x.Title, "", new { @class = "text-danger" })
					</div>
					<div class="form-group">
						@Html.Label("Menü Hakkında")
						@Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
						@Html.ValidationMessageFor(x => x.Description, "", new { @class = "text-danger" })
					</div>
					<button type="submit" class="btn btn-dark">Güncelle</button>
				}
			</div>
		</div>
	</div>
</div>

