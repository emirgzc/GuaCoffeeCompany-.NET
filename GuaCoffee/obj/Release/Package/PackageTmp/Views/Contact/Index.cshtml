
@model IEnumerable<EntityLayer.Concrete.Setting>

@{
	ViewBag.Title = "Index";
	Layout = "~/Views/Shared/_AnaLayout.cshtml";
}

<section class="page-header">
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<div class="content">
					<h1 class="page-name">İLETİŞİM</h1>
					<ol class="breadcrumb">
						<li><a href="/Slider/Index/">Anasayfa</a></li>
						<li class="active">İletişim</li>
					</ol>
				</div>
			</div>
		</div>
	</div>
</section>

<section class="page-wrapper">
	<div class="contact-section">
		<div class="container">
			<div class="row">
				<!-- Contact Form -->
				<div class="contact-form col-md-6 ">
					@using (Html.BeginForm("Index", "Contact", FormMethod.Post))
					{

						<div class="form-group">
							<input type="text" placeholder="İsim Soyisim" class="form-control" name="NameSurname" id="name" minlength="2" required="" maxlength="100">
						</div>

						<div class="form-group">
							<input type="email" placeholder="Mail Adresi" class="form-control" name="email" id="email" minlength="7" required="" maxlength="100">
						</div>

						<div class="form-group">
							<input type="text" placeholder="Konu" class="form-control" name="Subject" id="subject" minlength="5" required="" maxlength="100">
						</div>

						<div class="form-group">
							<textarea rows="6" placeholder="Mesaj" class="form-control" name="Message" id="message" minlength="5" required="" maxlength="1000"></textarea>
						</div>

						<div id="cf-submit">
							<input type="submit" id="contact-submit"
								   class="btn btn-main" value="Gönder">
						</div>

					}
				</div>
				<!-- ./End Contact Form -->
				<!-- Contact Details -->
				<div class="contact-details col-md-6 ">
					@foreach (var item in Model)
					{
						<div class="google-map">
							<iframe src="@item.Map" width="600" height="300" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
						</div>
						<ul class="contact-short-info">
							<li>
								<i class="tf-ion-ios-home"></i>
								<span>@item.Address / @item.City / @item.Country</span>
							</li>
							<li>
								<i class="tf-ion-android-phone-portrait"></i>
								<span>Telefon: @item.Phone</span>
							</li>
							<li>
								<i class="tf-ion-android-mail"></i>
								<span>Mail: @item.Email</span>
							</li>
						</ul>
						<!-- Footer Social Links -->
						<div class="social-icon">
							<ul>
								<li><a class="fb-icon" href="@item.Facebook"><i class="tf-ion-social-facebook"></i></a></li>
								<li><a href="@item.Instagram"><i class="tf-ion-social-instagram"></i></a></li>
								<li><a href="@item.Youtube"><i class="tf-ion-social-youtube"></i></a></li>
							</ul>
						</div>
					}
					<!--/. End Footer Social Links -->
				</div>
				<!-- / End Contact Details -->



			</div> <!-- end row -->
		</div> <!-- end container -->
	</div>
</section>

