
@model EntityLayer.Concrete.Store

@{
	ViewBag.Title = "ANewStore";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("ANewStore", "Shop", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
	<span class="text-danger">(Lütfen 3Mb' dan Yüksek Resim Yükleme Yapmayınız!)</span>
	<div class="form-group">
		@Html.Label("Başlık")
		@Html.TextBoxFor(x => x.Title, new { @class = "form-control", @required = "@required" })
		@Html.ValidationMessageFor(x => x.Title, "", new { @class = "text-danger" })
		<br />
		<div class="form-group">
			<label>İçerik</label>
			<textarea class="form-control" id="editorid" required="" name="Description" rows="4"></textarea>
			@Html.ValidationMessageFor(x => x.Description, "", new { @class = "text-danger" })
		</div>
		<br />
		@Html.Label("Ücret")
		@Html.TextBoxFor(x => x.Money, new { @class = "form-control", @required = "@required" })
		<br />
		@Html.Label("Renk")
		@Html.TextBoxFor(x => x.Color, new { @class = "form-control", @required = "@required" })
		@Html.ValidationMessageFor(x => x.Color, "", new { @class = "text-danger" })
		<br />
		@Html.Label("Resim")
		<input type="file" name="Image" class="form-control" required="">
		<br />
		<button class="btn btn-primary">Ekle</button>
	</div>
}

@section Scripts{
	<script src="~/mazer/dist/assets/vendors/ckeditor/ckeditor.js"></script>
	<script>
		CKEDITOR.replace("editorid")
	</script>
}

