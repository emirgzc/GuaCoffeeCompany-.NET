
@model EntityLayer.Concrete.Store

@{
	ViewBag.Title = "AStoreUpdate";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title">Ürün Güncelleme</h4>
			<div class="basic-form">
				@using (Html.BeginForm("AStoreUpdate", "Shop", FormMethod.Post, new { enctype = "multipart/form-data" }))
				{
					@Html.HiddenFor(x => x.StoreID)
					<div class="form-group">
						@Html.Label("Başlık")
						@Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
						@Html.ValidationMessageFor(x => x.Title, "", new { @class = "text-danger" })
					</div>
					<div class="form-group">
						@Html.Label("İçerik")
						@Html.TextAreaFor(x => x.Description, 6, 20, new { @class = "form-control", @id = "editorid" })
						@Html.ValidationMessageFor(x => x.Description, "", new { @class = "text-danger" })
					</div>
					<div class="form-group">
						@Html.Label("Ücret")
						@Html.TextBoxFor(x => x.Money, new { @class = "form-control" })
					</div>
					<div class="form-group">
						@Html.Label("Renk")
						@Html.TextBoxFor(x => x.Color, new { @class = "form-control" })
						@Html.ValidationMessageFor(x => x.Color, "", new { @class = "text-danger" })
					</div>
					<div class="form-group">
						<label>Resim </label>
						<input type="file" name="Image" class="form-control">
					</div>
					<button type="submit" class="btn btn-dark">Güncelle</button>
				}
			</div>
		</div>
	</div>
</div>

@section Scripts{
	<script src="~/mazer/dist/assets/vendors/ckeditor/ckeditor.js"></script>
	<script>
		CKEDITOR.replace("editorid")
	</script>
}

