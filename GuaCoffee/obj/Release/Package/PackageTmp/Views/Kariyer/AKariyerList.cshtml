
@model IEnumerable<EntityLayer.Concrete.Kariyer>

@{
	ViewBag.Title = "AKariyerList";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row" id="table-head">
	<div class="col-12">
		<div class="card">
			<div class="card-header">
				<h4 class="card-title">Kariyer Başvuruları</h4>
			</div>
			<div class="card-content">
				<div class="table-responsive">
					<table class="table mb-0">
						<thead class="thead-dark">
							<tr>
								<th>İsim Soyisim</th>
								<th>Son Çalıştığı Şirket İsmi</th>
								<th>Telefon</th>
								<th>Birim</th>
								<th>Tarih</th>
								<th>Sil</th>
								<th>Detay</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model)
							{
								<tr>
									<td>@item.NameSurname</td>
									<td>@item.LastWorkingName</td>
									<td>@item.Phone</td>
									<td>@item.Birim</td>
									<td>@item.DateKar.ToString("d MMMMM yyy")</td>
									<td><a href="/Kariyer/AKariyerDelete/@item.KarID" class="text-danger">Sil</a></td>
									<td><a href="/Kariyer/AKariyerDetails/@item.KarID">Detay</a></td>
								</tr>
							}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>


