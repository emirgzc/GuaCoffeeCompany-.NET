
@model EntityLayer.Concrete.Sube

@{
	ViewBag.Title = "ASubeUpdate";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title">Şube Güncelleme</h4>
			<div class="basic-form">
				@using (Html.BeginForm("ASubeUpdate", "Sube", FormMethod.Post))
				{
					@Html.HiddenFor(x => x.SubeID)
					<div class="form-group">
						@Html.Label("Şube Başlık")
						@Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
						@Html.ValidationMessageFor(x => x.Title, "", new { @class = "text-danger" })
					</div>
					<div class="form-group">
						@Html.Label("Şube Harita")
						@Html.TextBoxFor(x => x.Map, new { @class = "form-control" })
						@Html.ValidationMessageFor(x => x.Map, "", new { @class = "text-danger" })
					</div>
					<button type="submit" class="btn btn-dark">Güncelle</button>
				}
			</div>
		</div>
	</div>
</div>

