
@model EntityLayer.Concrete.Admin

@{
	ViewBag.Title = "AAddAdmin";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-xl-12 col-xxl-12">
	<div class="card">
		<div class="card-header">
			<h4 class="card-title">Admin Ekleme</h4>
			@if (ViewBag.hata != null)
			{
				<div class="text-center text-danger" style="margin-bottom:15px">
					<a class="text-danger" style="color:red;">
						@ViewBag.hata
					</a>
				</div>
			}
		</div>
		<div class="card-body">
			<div class="basic-form">
				@using (Html.BeginForm("AAddAdmin", "Admin", FormMethod.Post))
				{
					<div class="form-group">
						<label>Kullanıcı Adı</label>
						<input type="text" name="Username" required="" class="form-control input-default">
						@Html.ValidationMessageFor(x => x.Username, "", new { @class = "text-danger" })
					</div>
					<div class="form-group">
						<label>Şifre</label>
						<input type="password" name="Password" required="" class="form-control input-default">
						@Html.ValidationMessageFor(x => x.Password, "", new { @class = "text-danger" })
					</div>
					<button type="submit" class="btn btn-primary">Ekle</button>
				}
			</div>
		</div>
	</div>
</div>



